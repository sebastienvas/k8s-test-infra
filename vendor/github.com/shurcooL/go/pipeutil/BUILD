    name = "go_default_library",
    srcs = [
        "dir.go",
        "pipeutil.go",
    ],
    importpath = "github.com/shurcooL/go/pipeutil",
    visibility = ["//visibility:public"],
    deps = ["//vendor/gopkg.in/pipe.v2:go_default_library"],
)

